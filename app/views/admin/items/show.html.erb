<!-- 商品詳細ページ WF4ページ目 -->

<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <div class="col-xs-4">
      <%= attachment_image_tag @image, :image, size:'250x250', fallback: 'no_image.jpg',size: "250x250" %>
    </div>
    <div class="col-xs-6">

      <div>
        <p><strong class="col-xs-2">商品名</strong><%= @item.name %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-2">商品説明</strong><%= @item.introduction %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-2">ジャンル</strong><%= @item.genre.name %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-4">税込価格(税抜価格)</strong><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@product.price).floor.to_s(:delimited) %>)円</p>
      </div>
      <br>
      <div>
      <p><strong class="col-xs-3">販売ステータス</strong>
      <% if @item.is_active == true %>
        <%= "販売中" %>
      <% else %>
        <%=  "販売停止中" %>
      <% end %>
      <br>
      </div>
      <div class="text-right">
        <%= link_to "編集する",edit_admin_item_path(@item), class:"btn btn-primary" %>
      </div>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>