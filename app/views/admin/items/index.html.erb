<!-- 商品一覧ページ WF2ページ目 -->

<div class="container">
  <div class="row">
    <h3>商品一覧</h3>
    <div class="col-xs-1"></div>
    <div class="col-xs-9">
      <div class="text-right">
        <%= link_to new_admin_item_path do %>
        <button type="button" class="btn-outline-white btn-circle btn-md">＋</button>
        <% end %>
      </div>

      <table class="table-item-table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                販売中
              <% else %>
                <%= "販売停止中" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
        <%= paginate @items %>
    </div>

    <div class="col-xs-2"></div>
  </div>
</div>