<!-- 商品編集ページ WF5ページ目 -->

<div class="container">
  <div class="row">
    <h2>商品編集</h2>
    <%= render 'item_error', item: @item %>

    <%= form_with model:@item,url:admin_item_path,local:true do |f| %>
    <div class="col-lg-4">
      <%= f.label:商品画像, class:"col-xs-2" %>
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size:"250x250" %>
      <% else %>
        <%= image_tag 'no_image', size:"250x250" %>
      <% end %>
      <%= f.file_field :image, accept:"image/*" %>

      <!-- refileの記述 -->
      <!-- %= attachment_image_tag @item, :image, size:'250x250', fallback: 'no_image.jpg',size: "250x250" %
           %= f.attachment_field :image % -->
    </div>

    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label:商品名, class:"col-xs-2" %>
        <%= f.text_field :name, size:"56x5" %>
      </div>

      <div class="form-group">
        <%= f.label:商品説明, class:"col-xs-2" %>
        <%= f.text_area :introduction, size:"55x5" %>
      </div>

      <div class="form-group">
        <%= f.label:ジャンル, class:"col-xs-2" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: @item.genre_id} %>
      </div>

      <div class="form-group">
        <%= f.label:税抜価格, class:"col-xs-2" %>
        ¥ <%= f.text_field :price %>
      </div>

      <div class="form-group">
        <%= f.label:販売ステータス, class:"col-xs-2" %>
        <%= f.select :is_active,[["販売中",true],["販売停止中",false]]%>
      </div>

      <div>
        <%= f.submit "変更を保存" , class: "btn btn-primary"%></td>
      </div>
    <% end %>
    </div>
  </div>
</div>