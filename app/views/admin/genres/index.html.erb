<!-- ジャンル一覧・追加ページ WF6ページ目 -->

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3 class="genre-head">ジャンル一覧・追加</h3>

      <%= render 'genre_errors', genre: @genre %>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-primary genre_btn" %>
      </div>
      <% end %>

      <table class='table genre-table'>
        <thead>
          <tr>
            <th class="active col-xs-6">ジャンル</th>
            <th class="active col-xs-2"></th>
            <th class="active col-xs-3"></th>
          </tr>
        </thead>
        <tbody class="genre_area">
        <%= render 'genre_index', genres: @genres %>
        </tbody>
      </table>
    </div>
  </div>
</div>